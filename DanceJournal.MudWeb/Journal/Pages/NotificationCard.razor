@page "/notifications"
@using DanceJournal.Domain.Models;
@using DanceJournal.Services.BS_NotificationManagement.Contracts;


<style>
    .custom-button-size .mud-button-root {
        font-size: 5px; /* Adjust the font size as needed */
    }
</style>


@if(_render)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Уведомления</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="2">
                    <MudStack>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Style="font-size:  12px;">Отправить уведомление</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Style="font-size:  12px;">Создать приглашение</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Style="font-size:  12px;">Новые</MudButton>
                        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Style="font-size:  12px;">Архив</MudButton>
                    </MudStack>
                </MudItem>
                <MudItem xs="10">
                    <MudStack>
                        @foreach (var notification in _notifications)
                        {
                            <MudPaper Elevation="3">
                                <MudGrid>
                                    <MudItem xs="6">
                                        <MudText>@notification.Date</MudText>
                                    </MudItem>
                                    <MudItem xs="6">
                                        <MudText Align="Align.Right">@notification.Time</MudText>
                                    </MudItem>
                                    <MudItem xs="12">
                                        <MudText>@notification.Body</MudText>
                                    </MudItem>
                                </MudGrid>
                            </MudPaper>
                        }
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
}
