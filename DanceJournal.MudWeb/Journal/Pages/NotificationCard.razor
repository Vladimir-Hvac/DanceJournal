@using DanceJournal.Domain.Models;

@if(_render)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Уведомления</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudDataGrid T="Notification" Items="@_notifications">
                <Columns>
                    <TemplateColumn>
                        <PropertyColumn Property="x => x.Body" Field=""/>
                    </TemplateColumn>
                </Columns>
            </MudDataGrid>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
        </MudCardActions>
    </MudCard>
}
