@using DanceJournal.Domain.Models;
@using DanceJournal.Services.BS_NotificationManagement.Contracts;


<style>
    .custom-button-size .mud-button-root {
        font-size: 5px; /* Adjust the font size as needed */
    }
</style>


@if (_render && _notification != null)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Уведомление</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12">
                    <MudStack>
                        <MudPaper Elevation="3">
                            <MudGrid>
                                <MudItem xs="6">
                                    <MudText>@_notification.Date</MudText>
                                    </MudItem>
                                    <MudItem xs="6">
                                        <MudText Align="Align.Right">@_notification.Time</MudText>
                                    </MudItem>
                                    <MudItem xs="12">
                                        <MudText>@_notification.Body</MudText>
                                    </MudItem>
                                </MudGrid>
                            </MudPaper>
                    </MudStack>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
}
