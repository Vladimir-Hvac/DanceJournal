@page "/lessons"

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="12">

            <MudDataGrid T="Lesson" Items="@Lessons" ReadOnly="@_readOnly"
                         EditMode="@(_isCellEditMode ? DataGridEditMode.Cell : DataGridEditMode.Form)"
                         Filterable="true" QuickFilter="@_quickFilter"
                         StartedEditingItem="@StartedEditingItem"
                         CanceledEditingItem="@CanceledEditingItem"
                         CommittedItemChanges="@CommittedItemChanges">
                <ToolBarContent>
                    <MudIconButton Size="@Size.Medium" Icon="@Icons.Material.Outlined.Add" />
                    <MudSpacer />
                    <MudText Typo="Typo.h6">Lessons </MudText>
                    <MudSpacer />
                    <MudTextField @bind-Value="_searchString" Placeholder="Search" Adornment="Adornment.Start" Immediate="true"
                                  AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                </ToolBarContent>
                <Columns>
                    <PropertyColumn Property="x=>x.LessonType.Name" Field="Наименование занятия" >
                        <EditTemplate>
                            <MudSelect @bind-Value="@_selectedLessonsType" Items="@LessonTypes" >
                                @foreach (var item in LessonTypes)
                                {
                                    <MudSelectItem Value="@item">@item.Name</MudSelectItem>
                                }
                            </MudSelect>
                        </EditTemplate>
                    </PropertyColumn>
                    <PropertyColumn Property="x=>x.Level.Title" Field="Уровень" />
                    <PropertyColumn Property="x=>x.Date" Field="Дата" />
                    <PropertyColumn Property="x=>x.Start" Field="Дата" >
                        <EditTemplate>
                            <MudDatePicker @bind-Value="@context.Item.Start" />
                            <MudTimePicker @bind-Value="@context.Item.Start" />
                        </EditTemplate>
                    </PropertyColumn>
                    <PropertyColumn Property="x=>x.Room.Name" Field="Помещение" />
                    <PropertyColumn Property="x=>x.User" Field="Тренер" />

                    <TemplateColumn CellClass="d-flex justify-end">
                        <CellTemplate>
                            <MudIconButton Size="@Size.Small" Icon="@Icons.Material.Outlined.Edit" OnClick="@context.Actions.StartEditingItemAsync" />
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
            </MudDataGrid>

        </MudItem>
    </MudGrid>
</MudContainer>