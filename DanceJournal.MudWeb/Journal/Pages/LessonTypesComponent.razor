@page "/lessontypes"

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="9">

            <MudDataGrid T="LessonType" Items="@LessonTypes" ReadOnly="@_readOnly"
                         EditMode="@DataGridEditMode.Form"
                         Filterable="true" QuickFilter="@_quickFilter"
                         Dense="true">
                <ToolBarContent>
                    <MudText Typo="Typo.h6">Типы занятий</MudText>
                    <MudSpacer />
                    <MudSpacer />
                    <MudTextField @bind-Value="_searchString" Placeholder="Поиск" 
                        Adornment="Adornment.Start" Immediate="true"
                        AdornmentIcon="@Icons.Material.Filled.Search" 
                        IconSize="Size.Medium" Class="mt-0"></MudTextField>

                    <MudButton Variant="Variant.Filled" 
                        StartIcon="@Icons.Material.Filled.Add" 
                        Color="Color.Primary">Добавить</MudButton>
                </ToolBarContent>
                <Columns>
                    <PropertyColumn Property="x=>x.Name" Field="Name" />
                    <PropertyColumn Property="x=>x.Price" Field="Price" />
                    <PropertyColumn Property="x=>x.Type" Field="Type" />
                    <TemplateColumn CellClass="d-flex justify-end">
                        <CellTemplate >
                            <MudStack Row >
                                <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.Edit"  />
                                <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.CopyAll" />
                                <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.Remove" />
                            </MudStack>
                        </CellTemplate>
                    </TemplateColumn>
                </Columns>
            </MudDataGrid>
        </MudItem>
    </MudGrid>
</MudContainer>
